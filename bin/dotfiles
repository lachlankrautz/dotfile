#!/usr/bin/env bash

source "${0%/*}/../src/util/init.sh"

usage() {
    cat << EOF

Usage:  dotfiles [OPTIONS] COMMAND

A dotfiles manager

Options:
        -h, --help    Print general/command usage
        -v, --version Print version

Commands:
        install       Install dotfiles

EOF
}
dotfiles_option_v() {
    echo "Version: 1.0"
}
dotfiles_option_version() {
    dotfiles_option_v
}
dotfiles_() {
    usage
}
dotfiles_option_h() {
    HELP=1
    dispatch dotfiles "$@"
}
dotfiles_option_help() {
    HELP=1
    dispatch dotfiles "$@"
}
dotfiles_call_() {
    echo "Invalid call: '$@'."
}
dotfiles_command_install() {
    source "${0%/*}/../src/command/install.sh"
}

# Dispatch the arguments
dispatch dotfiles "$@"
